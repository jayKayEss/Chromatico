{
  "name": "chromatico",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "file-saver": "^1.3.8",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-scripts": "1.1.5"
  },
  "scripts": {
    "start-js": "react-scripts start",
    "start": "npm_execpath=yarn npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm_execpath=yarn npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "yarn run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "deploy": "yarn run build && scp -r build/* jaykayess:~/www/chromatico/"
  },
  "devDependencies": {
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "svg-sprite-loader": "^3.9.2"
  }
}
